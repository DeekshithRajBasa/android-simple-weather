<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.stfalcon.sampleweather.ui.fragments.TodayWeatherFragmentVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/weather"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvText"
            android:layout_margin="16dp" />

        <Spinner
            android:id="@+id/spCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spCountry"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spCity"
            android:layout_margin="16dp"
            android:text="@{@string/temperature(viewModel.temperature.get)}"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvPressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTemperature"
            android:layout_margin="16dp"
            android:text="@{@string/pressure(viewModel.pressure.get)}"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPressure"
            android:layout_margin="16dp"
            android:text="@{@string/humidity(viewModel.humidity.get)}"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tvSky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHumidity"
            android:layout_margin="16dp"
            android:text="@{@string/sky(viewModel.sky.get)}"
            android:textSize="25sp" />

    </RelativeLayout>

</layout>